{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators":true,//关闭es7装饰器语法报错
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    }
  },

  "include": ["./src/**/*.vue", "./src/**/*.js"],
  "exclude": ["node_modules"]
}
